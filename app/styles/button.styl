.Button
  display inline-block
  cursor pointer

  border-style solid
  border-width 1px
  border-radius 50px
  padding 10px 18px
  font-family font-family-sans
  text-decoration none
  // font-size 9.5pt
  // font-weight bold
  // color #fff

.Button--default
  border-color #8fc800
  background #8fc800

.Button--primary
    border-color brand-color
    background brand-color
    color white

.Button--link
  border none
  color brand-color
  &:hover
    color lighten(brand-color, 30%)

.Button--large
  font-size 16px
