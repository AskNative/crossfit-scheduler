/**
 * Vendor dependencies
 */
@import 'vendor/nib'
@import 'vendor/rupture'
@import 'vendor/jeet.gs/stylus/jeet'

/**
 * Jeet Syntax Quick Reference
 * https://github.com/mojotech/jeet/tree/master/stylus
 * ===================================================
 *
 * column(ratios = 1, offset = 0, cycle = 0, uncycle = 0)
 * span(ratio = 1, offset = 0)
 * shift(ratios = 0, col_or_span = column)
 * unshift()
 * edit()
 * center(max_width = 1410px, pad = 0)
 * stack(pad = 0, align = false)
 * unstack()
 * align(direction = both)
 * cf()
*/

/**
 * Rupture Syntax Quick Reference
 * https://github.com/jenius/rupture
 * ==================================
 *
 * Variables
 * ---------
 * mobile-cutoff
 * desktop-cutoff
 * scale — ex: `scale = 0 400px 600px 800px 1050px`
 *
 * Mixins
 * ------
 * +above(measure)
 * +from(measure)
 * +below(measure)
 * +to(measure)
 * +between(measure, measure)
 * +at(measure)
 * +mobile()
 * +tablet()
 * +desktop()
 * +retina()
 */

// Breakpoint:   0                 400px     600px     800px       1050px
//               ├───────────────────┼─────────┼─────────┼───────────┼─────────>
// Slice #:                1         ·    2         3          4     ·    5

/**
 * Variables
 */

/* Colors */
text-color = #4A4A4A
brand-color = #56B955
warning-color = #D0021B
muted-color = #D8D8D8
background-color = white

/* Fonts */
font-family-sans = HelveticaNeue-light, Helvetica, Arial, sans-serif

/* Responsive */
// scale = 0 768px 992px 1200px

/**
 * CSS
 */

html, body
  margin: 20px
  background: white

body
  color: text-color
  font: 12px font-family-sans

h1, h2, h3,
h4, h5, h6
  font-weight 100

h1
  // font-family: AvenirNext-UltraLight
  // font-family: HelveticaNeue-light
  font-size: 2em
  // font-weight: 100
  color: #4A4A4A
  // line-height: 49px
  /* Box Scheduler: */

h2
  // font-family: HelveticaNeue-light
  // font-weight: 100
  font-size: 1.5em
  color: #4A4A4A
  // line-height: 27px
  /* Today: */

h4
  // font-family: HelveticaNeue-light;
  font-size: 18px;
  color: #4A4A4A;
  line-height: 22px;
  /* 7:00-8:00 am: */

ul
  padding-left 20px

li
  // font-family: HelveticaNeue-light;
  font-weight: 100
  font-size: 18px
  color: #4A4A4A
  list-style: none
  // line-height: 22px
  /* Carl Bergstrand: */

hr
  margin: 40px 0
  height: 1px
  border: none
  background-color: whitesmoke

footer
  // edit()
  col(1)

  // .asknative
  //   align(both)

.Button
  display: inline-block
  cursor: pointer

  border-style: solid
  border-width: 1px
  border-radius: 50px
  padding: 10px 18px
  // font-size: 9.5pt
  // font-weight: bold
  // color: #fff
  font-family: font-family-sans
  text-decoration: none


.Button--default
  border-color: #8fc800
  background: #8fc800

.Button--primary
    border-color: brand-color
    background: white

// .Button--primary

.Button--link
  border none
  color brand-color
  &:hover
    color lighten(brand-color, 30%)

// .container
//   col(1/4 1/2, cycle: 4)
//   center(max_width = 400px, pad = 0)
//   // align(both)
//   text-align center

.text-muted
  color muted-color

.text-warning
  color warning-color

.GridContainer
  // center()
  padding 0

.GridCol
  col()
  // center(max_width = 400px, pad = 0)
  // align(both)
  // background whitesmoke
  margin 20px 0
  padding-bottom 40px
  border-bottom 1px solid whitesmoke

  +above(3)
    col(1/2, cycle: 2)
    border-bottom none

  // +tablet()
  //   center(500px)

  +desktop()
    col(1/3, cycle: 3)
